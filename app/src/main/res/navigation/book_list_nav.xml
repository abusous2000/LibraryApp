<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_list_nav"
    app:startDestination="@id/bookListFragment">

    <fragment
        android:id="@+id/bookListFragment"
        android:name="com.sample.libraryapplication.view.fragment.BookListFragment"
        android:label="Books" >
        <deepLink app:uri="myapp://booklibrary/bookListFragment"/>
        <action
            android:id="@+id/action_bookListFragment_to_bookFragment"
            app:destination="@id/bookFragment"/>
        <action
            android:id="@+id/action_MQTTFragment_to_bookListFragment"
            app:destination="@id/bookListFragment" />
        <action
            android:id="@+id/action_bookListFragment_to_townFragment"
            app:destination="@id/townFragment" />
    </fragment>
     <fragment
        android:id="@+id/bookFragment"
        android:name="com.sample.libraryapplication.view.fragment.BookFragment"

         android:label="{dynamicTitle}">
         <argument
             android:name="dynamicTitle"
             app:argType="string"/>
        <action
            android:id="@+id/action_bookFragment_to_bookListFragment"

            app:destination="@id/bookListFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/bookListFragment"
            app:popUpToInclusive="true" />
     </fragment>
    <fragment
        android:id="@+id/townFragment"
        android:name="com.sample.libraryapplication.view.fragment.TownFragment"
        android:label="town_fragment"
        tools:layout="@layout/town_fragment" >
        <action
            android:id="@+id/action_townFragment_to_bookListFragment"
            app:destination="@id/bookListFragment" />
    </fragment>

</navigation>